{
    "name": "thrfur/scrolltotop",
    "description": "Enables a simple scroll to top button",
    "type": "flarum-extension",
    "keywords": ["UI", "scroll"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Cutting",
            "role": "Creator"
        }
    ],
    "support": {
        "issues": "https://github.com/thrfur/scrolltotop/issues",
        "source": "https://github.com/thrfur/scrolltotop",
        "forum": "https://discuss.flarum.org"
    },
    "require": {
                "flarum/core": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "thrfur\\Scrolltotop\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Scroll to Top",
            "category": "feature",
            "icon": {
                "name": "fas fa-chevron-up",
                "backgroundColor": "#666",
                "color": "#ffffff"
            }
        }
    }
}
